
<div class="container">
  <h1>Restaurants</h1>
  <div class="row justify-content-center">
    <% @restaurants.each do |restaurant| %>
      <div class="col-12">
        <%= link_to restaurant_path(restaurant) do %>
          <h2><%= restaurant.name %></h2>
          <%= link_to "Delete", restaurant, method: :delete, remote: true %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

